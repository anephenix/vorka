{
  "name": "vorka",
  "version": "0.0.2",
  "description": "A new hybrid web/app framework",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "cover": "NODE_ENV=test node_modules/.bin/istanbul cover node_modules/.bin/_mocha test/**/*",
    "coveralls": "NODE_ENV=test node_modules/.bin/istanbul cover node_modules/.bin/_mocha test/**/* && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
		"docs": "open docs/index.html",
		"generate-docs": "node_modules/.bin/docco lib/**/*.js",
    "lint": "jshint .",
    "notes": "node_modules/.bin/notes .",
    "test": "NODE_ENV=test mocha test/**/*"
  },
  "repository": "https://github.com/anephenix/vorka",
  "author": "Anephenix <https://anephenix.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.13",
    "docco": "^0.7.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "notes": "0.0.4"
  }
}
